# API Keys (Required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Twilio Configuration (Optional - for phone support)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token  
TWILIO_PHONE_NUMBER=+1234567890

# Database Configuration
# SQLite (Development): sqlite:///./path/to/database.db
# PostgreSQL (Production): postgresql://user:password@host:port/database
# Railway automatically provides DATABASE_URL for PostgreSQL
DATABASE_URL=sqlite:///./learning_captures.db

# Redis
REDIS_URL=redis://localhost:6379/1
REDIS_TTL=1800

# Server Configuration
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=["*"]

# Audio Processing
WHISPER_MODEL=whisper-1
MAX_AUDIO_DURATION=60

# Claude Configuration
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=150
CLAUDE_TEMPERATURE=0.7

# Session Management
SESSION_TIMEOUT=180
MAX_CONTEXT_EXCHANGES=5

# Vector Database Configuration
CHROMA_PERSIST_DIR=./chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2
SEMANTIC_SEARCH_THRESHOLD=0.5
ENABLE_VECTOR_SEARCH=true

# RuVector Configuration (Phase 1)
VECTOR_BACKEND=auto
RUVECTOR_PERSIST_DIR=./ruvector_db
RUVECTOR_ENABLE_LEARNING=true
RUVECTOR_ENABLE_COMPRESSION=true
RUVECTOR_COMPRESSION_TIERS=hot:f32:24h,warm:f16:168h,cold:i8
RUVECTOR_GNN_ENABLED=true
RUVECTOR_ATTENTION_HEADS=8

# Vector A/B Testing
VECTOR_AB_TEST_ENABLED=false
VECTOR_AB_TEST_RUVECTOR_PCT=50

# Graph Query Configuration (Phase 2 prep)
ENABLE_GRAPH_QUERIES=false
GRAPH_QUERY_TIMEOUT_MS=500

# Advanced Prompts Configuration
USE_CHAIN_OF_THOUGHT=true
USE_FEW_SHOT=true
PROMPT_STRATEGY=adaptive

# Offline/PWA Configuration
OFFLINE_CACHE_MAX_ENTRIES=100
ENABLE_OFFLINE_MODE=true

# Security Configuration
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_EXPIRE_MINUTES=15
JWT_REFRESH_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_AUTH_REQUESTS_PER_MINUTE=10

# Security Headers
SECURITY_HEADERS_ENABLED=true
SECURITY_CSP_ENABLED=true
SECURITY_CSP_REPORT_ONLY=false
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_PRELOAD=false
SECURITY_FRAME_OPTIONS=DENY
SECURITY_REFERRER_POLICY=strict-origin-when-cross-origin
SECURITY_PERMISSIONS_POLICY=accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(self), payment=(), usb=()

# WebSocket Security
WEBSOCKET_ORIGIN_VALIDATION=true

# Environment
ENVIRONMENT=development

# Secrets Management
# Options: env (default), railway, aws
# env: Read from .env file and environment variables (default, backward compatible)
# railway: Use Railway's encrypted secrets (automatically injected as env vars)
# aws: Use AWS Secrets Manager (requires boto3 and AWS credentials)
SECRETS_PROVIDER=env

# Logging and Observability Configuration
# LOG_AGGREGATOR options: none (default), datadog, cloudwatch, elk
LOG_AGGREGATOR=none
LOG_LEVEL=INFO
LOG_JSON_FORMAT=false

# DataDog Configuration (only required if LOG_AGGREGATOR=datadog)
# DATADOG_API_KEY=your_datadog_api_key
# DATADOG_APP_KEY=your_datadog_app_key
# DATADOG_SITE=datadoghq.com
# DATADOG_SERVICE_NAME=learning-voice-agent

# CloudWatch Configuration (only required if LOG_AGGREGATOR=cloudwatch)
# Requires AWS credentials (AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY or AWS_PROFILE)
# AWS_REGION=us-east-1
# CLOUDWATCH_LOG_GROUP=/learning-voice-agent
# CLOUDWATCH_LOG_STREAM_PREFIX=app

# ELK Configuration (only required if LOG_AGGREGATOR=elk)
# ELK_HOST=localhost
# ELK_PORT=9200
# ELK_INDEX_PREFIX=learning-voice-agent
# ELK_USE_SSL=false
# ELK_USERNAME=elastic
# ELK_PASSWORD=your_elk_password