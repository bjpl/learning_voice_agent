# Staging Environment Variables
# PATTERN: Environment-specific configuration
# WHY: Separate staging from production settings

# Environment
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# API Keys (replace with staging-specific keys if available)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Twilio (if testing voice features)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# Database
DATABASE_URL=sqlite:///data/staging_captures.db

# Redis
REDIS_URL=redis://localhost:6380
REDIS_TTL=1800

# Server
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=["http://localhost:8080","http://staging.example.com"]

# Claude Configuration
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=150
CLAUDE_TEMPERATURE=0.7

# Session Management
SESSION_TIMEOUT=180
MAX_CONTEXT_EXCHANGES=5

# Audio Processing
WHISPER_MODEL=whisper-1
MAX_AUDIO_DURATION=60
